<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/IdNombre"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_marginTop="76dp"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/IdApellido"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:hint="Apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdNombre" />
    <EditText
        android:id="@+id/IdCorreo"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:hint="Correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdApellido" />
    <EditText
        android:id="@+id/IdEdad"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:hint="Edad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdCorreo" />

    <Button
        android:id="@+id/IdRegistrar"
        android:layout_width="199dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:hint="REGISTRAR"
        android:textColor="#FFFFFF"
        app:iconTint="#E8FF00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdEdad" />
</androidx.constraintlayout.widget.ConstraintLayout>